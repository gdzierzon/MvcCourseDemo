@model MvcCSharp.Models.ViewModels.OrderListViewModel

<table class="table">
    <tr>
        <th>
            Order Id
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Order Date
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Orders)
    {
        using (Html.BeginForm())
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderId)
                </td>
                <td>
                    @Html.DisplayFor(m => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(m => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    <div class="btn-group" role="group">
                        @Html.ActionLink("Details", "Details", new { id = item.OrderId }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Edit", "Delete", new { id = item.OrderId }, new { @class = "btn btn-danger" })
                    </div>
                </td>

            </tr>

        }
    }
</table>
