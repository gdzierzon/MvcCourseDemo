@model List<MvcCSharp.Models.ViewModels.CustomerOrder>

<table class="table">
    <tr>
        <th>
            Order Id
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Order Date
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        using (Html.BeginForm())
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderId)
                </td>
                <td>
                    @Html.Hidden("CustomerId", @item.CustomerId)
                    @Html.TextBox("FirstName", @item.FirstName)
                </td>
                <td>
                    @Html.TextBox("LastName", @item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <input type="Submit" name="submit" value="Save" class="btn btn-success" />
                        @Html.ActionLink("Details", "Details", new { id = item.OrderId }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.OrderId }, new { @class = "btn btn-danger" })
                    </div>
                </td>

            </tr>

        }
    }
</table>
